<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.restservice.user.UserMapper">

    <select id="findAllUsers" resultType="User">
        select * from users
    </select>

    <select id="findUser" resultType="User">
        select * from users where id = #{id}
    </select>

    <insert id="createUser">
        insert into users(id, name, ssn, password, joindate) values(user_seq.nextval, #{name}, #{ssn}, #{password}, sysdate)
    </insert>

    <delete id="deleteUser">
        delete from users where id = #{id}
    </delete>

    <resultMap id="userMap" type="User">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="joinDate" column="joinDate"/>
        <result property="password" column="password"/>
        <result property="ssn" column="ssn"/>
        <collection property="posts" resultMap="postMap"/>
    </resultMap>

    <resultMap id="postMap" type="Post">
        <result property="id" column="id"/>
        <result property="description" column="description"/>
    </resultMap>

<!--    <select id="findUser" resultMap="userMap">-->
<!--        select * from users join post on users.id = post.id where users.id = #{id}-->
<!--    </select>-->

</mapper>